<!-- res/drawable/rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?attr/colorButtonNormal" /> <!-- Warna tombol default -->
    <corners android:radius="16dp" /> <!-- Sudut bulat -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="12dp"
        android:bottom="12dp" />
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Opsional: menambahkan border -->
</shape>
